using namespace std;

#include <iostream>
#include <sstream>
#include <vector>

vector<string> splitString(stringstream ss)
{
	string s;
	vector<string> str;

	while(getline(ss, s, ':'))
	{
		str.push_back(s);
	}

	return str;
}

void getMilitaryTime(vector<string> time)
{
	if(time[2][2] == 'A')
	{
		if(time[0] == "12")
			time[0] == "00";
	}

	else
	{
		if(time[0] != "12")
		{
			time[0][0] += '1'-'0';
			time[0][1] += '2'-'0';
		}
	}

	time[2][2] = '\0';

	cout << time[0] << ":";
	cout << time[1] << ":";
	cout << time[2];
}

int main()
{
	string time;
	cin >> time;

	stringstream ss(time);

	vector<string> timesplit = splitString(ss);

	getMilitaryTime(timesplit);

	return 0;
}
